<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State ketika RadioButton dipilih (checked) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#EFF6FF" /> <!-- Warna biru muda -->
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#3B82F6" /> <!-- Opsional: border biru yang sedikit lebih gelap -->
        </shape>
    </item>
    <!-- State default ketika RadioButton tidak dipilih -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna putih default -->
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#E5E7EB" /> <!-- Opsional: border abu-abu muda -->
        </shape>
    </item>
</selector>